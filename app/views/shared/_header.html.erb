<header class="p-3 text-bg-success fixed-top">
  <div class="container">
    <div class="d-flex align-items-center">
      <div>
        <%= link_to "Music Share", root_path, class: "nav-link px-2 text-white fs-4" %>
      </div>
      <div class="ms-auto d-none d-md-block">
        <% if user_signed_in? %>
          <% if current_user.guest? %>
            <%= button_to "ゲストログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-light mt-2", data: { turbo: false } %>
          <% else %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-light mt-2" %>
          <% end %>
        <% else %>
          <div class="d-flex gap-2 mt-2">
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-light mt-2" %>
            <%= link_to "新規登録", new_user_registration_path, class: "btn btn-warning mt-2" %>
            <%= button_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-light mt-2", data: { turbo: false } %>
          </div>
        <% end %>
      </div>
      <button class="btn text-white d-md-none ms-auto ms-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
        <i class="bi bi-list fs-2"></i>
      </button>
    </div>
  </div>
</header>
<div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasMenuLabel">メニュー</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <ul class="list-group list-group-flush">
      <li class="list-group-item bg-dark border-0"><%= link_to "Home", root_path, class: "nav-link text-white" %></li>
      <li class="list-group-item bg-dark border-0"><%= link_to "Search", search_path(search_type: "artist"), class: "nav-link text-white" %></li>
      <li class="list-group-item bg-dark border-0"><%= link_to "Mypage", mypage_path, class: "nav-link text-white" %></li>
      <li class="list-group-item bg-dark border-0"><%= link_to "投稿する", new_post_path, class: "nav-link text-white" %></li>
    </ul>
    <% if user_signed_in? %>
      <% if current_user.guest? %>
        <%= button_to 'ゲストログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-light mt-2", data: { turbo: false } %>
      <% else %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-light mt-2" %>
      <% end %>
    <% else %>
      <div class="d-flex gap-2 mt-2">
        <%= link_to 'ログイン', new_user_session_path, class: "btn btn-outline-light mt-2" %>
        <%= link_to '新規登録', new_user_registration_path, class: "btn btn-warning mt-2" %>
        <%= button_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "btn btn-light mt-2", data: { turbo: false } %>
      </div>
    <% end %>
  </div>
</div>
