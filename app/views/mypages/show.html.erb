<div class="container">
  <div class="row">
    <div class="col-md-3 col-lg-3">
      <%= render "shared/menu" %>
    </div>
    <div class="col-md-9 col-lg-9">
      <% current_tab = params[:tab] || "account" %>
      <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
          <%= link_to "アカウント情報", mypage_path(tab: "account"), class: "nav-link #{current_tab == 'account' ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "投稿", mypage_path(tab: "posts"), class: "nav-link #{current_tab == 'posts' ? 'active' : ''}" %>
        </li>
        <li class="nav-item">
          <%= link_to "いいね", mypage_path(tab: "likes"), class: "nav-link #{current_tab == 'likes' ? 'active' : ''}" %>
        </li>
      </ul>
      <% case current_tab %>
      <% when "likes" %>
        <%= render partial: "mypages/likes", locals: { posts: @liked_posts } %>
      <% when "posts" %>
        <%= render partial: "mypages/posts", locals: { posts: @my_posts } %>
      <% else %>
        <%= render "mypages/account" %>
      <% end %>
    </div>
  </div>
</div>
