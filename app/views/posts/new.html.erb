<div class="container py-5">
  <div class="post-container mx-auto p-4 bg-white rounded">
    <%= form_with(model: @post, local: true, data: { turbo: false }) do |f| %>
      <div class="d-flex justify-content-center align-items-center mb-4">
        <h5 class="mb-0 dflex">投稿を作成</h5>
      </div>
      <div class="d-flex align-items-center mb-3 p-2 bg-light rounded" id="selected-track">
        <div class="me-3">
          <div class="track-image bg-secondary rounded"></div>
        </div>
        <div class="flex-grow-1">
          <p class="mb-0 text-dark">曲を選択してください</p>
        </div>
        <button type="button" class="btn btn-outline-dark btn-sm" data-bs-toggle="modal" data-bs-target="#trackModal">変更</button>
      </div>
      <%= f.hidden_field :spotify_track_id, id: "post_spotify_track_id" %>
      <%= f.hidden_field :song_title, id: "post_song_title" %>
      <%= f.hidden_field :artist_name, id: "post_artist_name" %>
      <div class="mb-3">
        <%= f.text_area :content, class: "form-control", rows: 4, maxlength: 100, placeholder: "音楽の感想や思い出を書いてみましょう" %>
        <div class="text-end text-muted small mt-1" id="comment-count">0 / 100</div>
      </div>
      <div class="d-flex justify-content-end">
        <%= f.submit "投稿", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "tracks/modal" %>
  </div>
</div>
