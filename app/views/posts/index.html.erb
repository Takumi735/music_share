<div class="container">
  <div class="row">
    <div class="col-md-4 col-lg-3">
      <%= render "shared/menu" %>
    </div>
    <div class="col-md-8 col-lg-9">
      <%= render "shared/search_form" %>
      <% @posts.each do |post| %>
        <%= link_to post_path(post), class: "text-decoration-none" do %>
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <div class="card-header d-flex justify-content-between">
                <h5 class="user-name text-white"><%= post.user.name %></h5>
                <p class="text-white small mb-0"><%= time_ago_in_words(post.created_at, include_seconds: true) %>Ââç</p>
              </div>
              <iframe class="spotify-embed" src="https://open.spotify.com/embed/track/<%= post.spotify_track_id %>?utm_source=generator" allowfullscreen allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
              <% if post.content.present? %>
                <p class="mt-2 text-white p"><%= post.content %></p>
              <% end %>
              <div class="mt-2">
                <button class="btn btn-outline-secondary">Like</button>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
