<div class="container">
  <div class="row">
    <div class="col-md-4 col-lg-3">
      <%= render "shared/menu" %>
    </div>
    <div class="col-md-9 col-lg-9">
      <h3 class="text-white mb-4">アカウント情報の編集</h3>
      <%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :email, "メールアドレス", class: "form-label text-white" %>
          <%= f.email_field :email, class: "form-control #{'is-invalid' if resource.errors[:email].present?}" %>
          <% if resource.errors[:email].present? %>
            <div class="invalid-feedback">
              <%= resource.errors[:email].join(", ") %>
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :name, "ユーザー名", class: "form-label text-white" %>
          <%= f.text_field :name, class: "form-control #{'is-invalid' if resource.errors[:name].present?}" %>
          <% if resource.errors[:name].present? %>
            <div class="invalid-feedback">
              <%= resource.errors[:name].join(", ") %>
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :current_password, "現在のパスワード", class: "form-label text-white" %>
          <%= f.password_field :current_password, class: "form-control #{'is-invalid' if resource.errors[:current_password].present?}", autocomplete: "current-password" %>
          <% if resource.errors[:current_password].present? %>
            <div class="invalid-feedback">
              <%= resource.errors[:current_password].join(", ") %>
            </div>
          <% end %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "新しいパスワード", class: "form-label text-white" %>
          <%= f.password_field :password, class: "form-control #{'is-invalid' if resource.errors[:password].present?}", autocomplete: "new-password" %>
          <% if resource.errors[:password].present? %>
            <div class="invalid-feedback">
              <%= resource.errors[:password].join(", ") %>
            </div>
          <% end %>
        </div>
        <%= f.submit "更新する", class: "btn btn-outline-light mt-3" %>
      <% end %>
    </div>
  </div>
</div>
